<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/control_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_alignEnd="@+id/image"
        android:layout_alignLeft="@+id/image"
        android:layout_alignRight="@+id/image"
        android:layout_alignStart="@+id/image"
        android:layout_alignTop="@+id/image"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:alpha="0.4"
        android:background="@drawable/roundedbutton_download_image"
        android:src="@drawable/ic_download" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/image"
        android:layout_alignEnd="@+id/image"
        android:layout_alignLeft="@+id/image"
        android:layout_alignRight="@+id/image"
        android:layout_alignStart="@+id/image"
        android:layout_alignTop="@+id/image"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:indeterminate="false"
        android:max="100"
        android:progressDrawable="@drawable/circular_progress_bar_white" />

    <TextView
        android:id="@+id/image_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:fontFamily="sans-serif"
        android:text="Image.pmg"
        android:textColor="@color/chat_message"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/image_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/image"
        android:fontFamily="sans-serif"
        android:text="34.7 kb"
        android:textColor="@color/chat_timestamp"
        android:textSize="13sp"
        android:textStyle="normal" />
</RelativeLayout>
