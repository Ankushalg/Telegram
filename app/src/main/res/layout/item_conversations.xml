<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingEnd="12dp"
    android:paddingRight="12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha" />

    <TextView
        android:id="@+id/short_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/avatar"
        android:layout_alignLeft="@+id/avatar"
        android:layout_alignRight="@+id/avatar"
        android:layout_alignTop="@+id/avatar"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/color_short_name" />

    <ImageView
        android:id="@+id/group_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_name"
        android:layout_gravity="bottom"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/avatar"
        android:src="@drawable/ic_group" />

    <TextView
        android:id="@+id/text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/avatar"
        android:singleLine="true"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:text="Some message"
        android:textColor="@color/list_of_chats_text" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/group_image"
        android:singleLine="false"
        android:text="Your name"
        android:textSize="17sp"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/color_name"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/online_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_name"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/time"
        android:layout_toStartOf="@+id/time"
        android:src="@drawable/ic_clock" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/user_name"
        android:textSize="13sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:singleLine="true"
        android:text="5:34 PM"
        android:textColor="@color/color_time" />

    <ImageView
        android:id="@+id/unread_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/text_message"
        android:src="@drawable/ic_badge" />

    <TextView
        android:id="@+id/number_of_unread_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/unread_message"
        android:layout_alignLeft="@id/unread_message"
        android:layout_alignRight="@+id/unread_message"
        android:layout_alignTop="@+id/unread_message"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="3"
        android:textColor="#FFFFFF" />

</RelativeLayout>